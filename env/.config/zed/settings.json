{
  "language_models": {
    "anthropic": {
      "version": "1"
    }
  },
  "features": {
    "copilot": false
  },
  "theme": "Catppuccin Mocha",
  "ui_font_size": 16,
  "buffer_font_size": 16,
  "buffer_font_family": "CommitMono Nerd Font",
  "vim_mode": true,
  "cursor_blink": false,
  "relative_line_numbers": true,
  "scrollbar": {
    "show": "never"
  },
  "vertical_scroll_margin": 0,
  "vim": {
    "use_system_clipboard": "always",
    "use_multiline_find": true
  },
  "tab_bar": {
    "show": false
  },
  "toolbar": {
    "breadcrumbs": true,
    "quick_actions": false
  },
  "preferred_line_length": 100,
  "soft_wrap": "preferred_line_length",
  "use_autoclose": false,
  "git": {
    "inline_blame": {
      "enabled": false,
      "delay_ms": 500
    }
  },
  "terminal": {
    "alternate_scroll": "off",
    "blinking": "terminal_controlled",
    "copy_on_select": true,
    "font_family": "CommitMono Nerd Font",
    "line_height": "standard",
    "toolbar": {
      "title": true
    },
    "working_directory": "current_project_directory",
    "button": false
  },
  "project_panel": {
    "button": false,
    "auto_fold_dirs": false,
    "scrollbar": {
      "show": "never"
    }
  },
  "outline_panel": {
    "button": false
  },
  "formatter": {
    "language_server": {
      "name": "biome"
    }
  },
  "tab_size": 2
}
